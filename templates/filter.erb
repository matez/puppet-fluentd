<filter <%= @pattern %>>
<% @config.sort_by {|k,v| k}.each do |key, val| -%>
    <%- if val.is_a?( Hash ) -%>
        <<%= key -%>>
        <%- val.sort_by {|k,v| k}.each do |subkey, subval| -%>
            <%= subkey -%> <%= subval %>
        <%- end -%>
        </<%= key %>>
    <%- else -%>
        <%= key -%> <%= val %>
    <%- end -%>
<% end -%>
</filter>
